<div class="container bg-dark bg-opacity-75 p-4">

    <div class="col-3 py-1">
        <p class="text-white fs-5 fw-bold">Usuário:</p>
        <input type="text" class="form-control" id="inputPassword2" @bind="InputUser" placeholder="">
    </div>
    <div class="col-3 py-1">
        <p class="text-white fs-5 fw-bold">Senha:</p>
        <input type="password" class="form-control" id="inputPassword2" placeholder="">
    </div>
    <div class="col-3 py-1" style="margin-top:10px;">
        <button type="submit" @onclick="Acessar" class="btn btn-primary mb-6">Confirmar acesso</button>
    </div>


    @if (acesso)
    {
        <div class="text-white fs-5">
            <p class="my-3 fw-bold">Seja bem vindo: @InputUser</p>
            <p class="py-2 fw-bold">Você tem a funcionalidade habilitada de:</p>
            <ListarLogins />
        </div>

    }
</div>



@code {
    private bool acesso = false;
    private string? InputUser;
